---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Team - CUNY AI Lab">
  <!-- Hero Section -->
  <section class="relative pt-24 pb-10 lg:pt-28 lg:pb-12">
    <div class="absolute inset-0 bg-gradient-to-b from-cuny-blue via-cuny-blue to-vibrant-900"></div>
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <h1 class="text-4xl md:text-5xl font-bold font-display text-white tracking-tight">Our Team</h1>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-12 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-lg text-gray-600 leading-relaxed">
        The CUNY AI Lab is a collaborative initiative developed by faculty and staff at the Graduate Center with and for the CUNY community.
      </p>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-12 bg-neutral-cream">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold font-display text-neutral-stone mb-8">Co-Directors</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center">
        <!-- Matthew K. Gold -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[320px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/matthew-gold.webp`} alt="Matthew K. Gold" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold font-display text-neutral-stone mb-1">Matthew K. Gold</h3>
            <p class="text-vibrant-600 font-semibold mb-3 text-sm uppercase tracking-wide">Associate Professor of English and Digital Humanities</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              Director, Graduate Center Digital Initiatives
            </p>
          </div>
        </div>

        <!-- Laurie Hurson -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[320px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/laurie-hurson.jpg`} alt="Laurie Hurson" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold font-display text-neutral-stone mb-1">Laurie Hurson</h3>
            <p class="text-vibrant-600 font-semibold mb-3 text-sm uppercase tracking-wide">Assistant Director of Open Education</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              Teaching and Learning Center
            </p>
          </div>
        </div>

        <!-- Stefano Morello -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[320px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/stefano-morello.jpg`} alt="Stefano Morello" class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold font-display text-neutral-stone mb-1">Stefano Morello</h3>
            <p class="text-vibrant-600 font-semibold mb-3 text-sm uppercase tracking-wide">Assistant Director for Digital Projects</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              American Social History Project / Center for Media and Learning
            </p>
          </div>
        </div>

        <!-- Zach Muhlbauer -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[320px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/zach-muhlbauer.jpg`} alt="Zach Muhlbauer" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold font-display text-neutral-stone mb-1">Zach Muhlbauer</h3>
            <p class="text-vibrant-600 font-semibold mb-3 text-sm uppercase tracking-wide">Presidential Research Fellow</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              Teaching and Learning Center; Technical Lead, Critical AI Literacy Institute
            </p>
          </div>
        </div>

        <!-- Maura Smale -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[320px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/maura-smale.webp`} alt="Maura Smale" class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold font-display text-neutral-stone mb-1">Maura Smale</h3>
            <p class="text-vibrant-600 font-semibold mb-3 text-sm uppercase tracking-wide">Executive Chief Librarian</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              Mina Rees Library
            </p>
          </div>
        </div>

        <!-- Luke Waltzer -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[320px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/luke-waltzer.jpg`} alt="Luke Waltzer" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold font-display text-neutral-stone mb-1">Luke Waltzer</h3>
            <p class="text-vibrant-600 font-semibold mb-3 text-sm uppercase tracking-wide">Director</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              Teaching and Learning Center
            </p>
          </div>
        </div>

        <!-- Stephen Zweibel -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[320px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/stephen-zweibel.webp`} alt="Stephen Zweibel" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold font-display text-neutral-stone mb-1">Stephen Zweibel</h3>
            <p class="text-vibrant-600 font-semibold mb-3 text-sm uppercase tracking-wide">Associate Professor, Digital Scholarship Librarian</p>
            <p class="text-gray-600 text-sm leading-relaxed">
              Mina Rees Library
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- Fellows Section -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold font-display text-neutral-stone mb-8">Fellows</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 justify-items-center">
        <!-- Ellen Pan -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[280px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gradient-to-br from-vibrant-100 to-vibrant-200 relative flex items-center justify-center">
            <img src="/images/team/ellen-pan.jpg" alt="Ellen Pan" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-bold font-display text-neutral-stone mb-1">Ellen Pan</h3>
            
          </div>
        </div>

        <!-- Jonathan Toro -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[280px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/jonathan-toro.png`} alt="Jonathan Toro" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-bold font-display text-neutral-stone mb-1">Jonathan Toro</h3>
            
          </div>
        </div>

        <!-- Nicole Walker -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[280px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/nicole-walker.png`} alt="Nicole Walker" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-bold font-display text-neutral-stone mb-1">Nicole Walker</h3>
            
          </div>
        </div>

        <!-- Ian G. Williams -->
        <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden w-full max-w-[280px] group border border-gray-100">
          <div class="aspect-[3/4] overflow-hidden bg-gray-100 relative">
            <img src={`${base}images/team/ian-williams.jpg`} alt="Ian G. Williams" class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-5">
            <h3 class="text-lg font-bold font-display text-neutral-stone mb-1">Ian G. Williams</h3>
            
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Collaborating Units -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold font-display text-neutral-stone mb-8">Collaborating Units</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="https://gcdi.commons.gc.cuny.edu/" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center bg-white p-3 rounded-lg border border-gray-200 hover:border-vibrant-300 hover:shadow-md transition-all group">
          <img src={`${base}images/partners/logo-gcdi.png`} alt="Graduate Center Digital Initiatives" class="h-20 w-auto object-contain group-hover:scale-105 transition-transform" />
        </a>
        <a href="https://tlc.commons.gc.cuny.edu/" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center bg-white p-3 rounded-lg border border-gray-200 hover:border-vibrant-300 hover:shadow-md transition-all group">
          <img src={`${base}images/partners/TLC-Logo-v4-No-GC.png`} alt="Teaching and Learning Center" class="h-20 w-auto object-contain group-hover:scale-105 transition-transform" />
        </a>
        <a href="https://library.gc.cuny.edu/" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center bg-cuny-indigo p-3 rounded-lg border border-gray-200 hover:border-vibrant-300 hover:shadow-md transition-all group">
          <img src={`${base}images/partners/MRS_logo_One_Search.png`} alt="Mina Rees Library" class="h-20 w-auto object-contain group-hover:scale-105 transition-transform" />
        </a>
        <a href="https://ashp.cuny.edu/" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center bg-white p-3 rounded-lg border border-gray-200 hover:border-vibrant-300 hover:shadow-md transition-all group">
          <img src={`${base}images/partners/ashp-logo-blue.png`} alt="American Social History Project" class="h-20 w-auto object-contain group-hover:scale-105 transition-transform" />
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
