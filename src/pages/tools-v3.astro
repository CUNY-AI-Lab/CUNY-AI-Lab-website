  <script is:inline>
    (function() {
      // ── Overlay Logic ──
      var overlays = document.querySelectorAll('.tool-overlay');
      var triggers = document.querySelectorAll('.card-trigger');

      function openOverlay(id) {
        var overlay = document.getElementById(id);
        if (!overlay) return;
        overlay.classList.remove('hidden');
        overlay.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
        // Trigger animation on next frame
        requestAnimationFrame(function() {
          overlay.querySelector('.overlay-backdrop').style.opacity = '1';
          overlay.querySelector('.overlay-panel').style.transform = 'translateY(0)';
        });
      }

      function closeOverlay(overlay) {
        var backdrop = overlay.querySelector('.overlay-backdrop');
        var panel = overlay.querySelector('.overlay-panel');
        backdrop.style.opacity = '0';
        panel.style.transform = 'translateY(100%)';
        overlay.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
        setTimeout(function() {
          overlay.classList.add('hidden');
        }, 500);
      }

      triggers.forEach(function(trigger) {
        trigger.addEventListener('click', function() {
          openOverlay(this.dataset.overlay);
        });
      });

      overlays.forEach(function(overlay) {
        // Close on backdrop click
        overlay.querySelector('.overlay-backdrop').addEventListener('click', function() {
          closeOverlay(overlay);
        });
        // Close on X button
        overlay.querySelector('.overlay-close').addEventListener('click', function() {
          closeOverlay(overlay);
        });
      });

      // Close on Escape
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          overlays.forEach(function(overlay) {
            if (!overlay.classList.contains('hidden')) {
              closeOverlay(overlay);
            }
          });
        }
      });

      // ── Media Slider ──
      var current = 0;
      var total = 3;
      var slides = [document.getElementById('slide-0'), document.getElementById('slide-1'), document.getElementById('slide-2')];
      var dots = document.querySelectorAll('.slider-dot');
      var toolBtns = document.querySelectorAll('.media-tool-btn');

      function goTo(index) {
        slides[current].style.opacity = '0';
        dots[current].className = 'slider-dot w-2.5 h-2.5 rounded-full bg-gray-300 transition-colors';
        toolBtns[current].className = 'media-tool-btn block bg-white rounded-xl p-5 border-2 border-transparent transition-all hover:shadow-lg hover:border-gray-200 group';

        current = (index + total) % total;

        slides[current].style.opacity = '1';
        dots[current].className = 'slider-dot w-2.5 h-2.5 rounded-full bg-teal-500 transition-colors';
        toolBtns[current].className = 'media-tool-btn block bg-white rounded-xl p-5 border-2 border-teal-300 transition-all hover:shadow-lg group';
      }

      document.getElementById('slider-prev').addEventListener('click', function(e) { e.stopPropagation(); goTo(current - 1); });
      document.getElementById('slider-next').addEventListener('click', function(e) { e.stopPropagation(); goTo(current + 1); });

      dots.forEach(function(dot) {
        dot.addEventListener('click', function(e) { e.stopPropagation(); goTo(parseInt(this.dataset.slide)); });
      });

      toolBtns.forEach(function(btn) {
        btn.addEventListener('mouseenter', function() { goTo(parseInt(this.dataset.slide)); });
      });
    })();
  </script>

