<script is:inline>
  // Navigation
  var navBtns = document.querySelectorAll('.nav-btn');
  var sections = document.querySelectorAll('.content-section');
  var nextBtns = document.querySelectorAll('.next-section-btn');

  function showSection(sectionId) {
    // Hide all sections
    sections.forEach(function(section) {
      section.classList.add('hidden');
    });

    // Show target section
    var target = document.getElementById('section-' + sectionId);
    if (target) {
      target.classList.remove('hidden');
    }

    // Update nav active state
    navBtns.forEach(function(btn) {
      btn.classList.remove('active', 'bg-vibrant-50', 'text-vibrant-600', 'border-l-4', 'border-vibrant-600');
      if (btn.getAttribute('data-section') === sectionId) {
        btn.classList.add('active', 'bg-vibrant-50', 'text-vibrant-600', 'border-l-4', 'border-vibrant-600');
      }
    });

    // Scroll to top on mobile
    if (window.innerWidth < 1024) {
      window.scrollTo({ top: 200, behavior: 'smooth' });
    }
  }

  // Nav button clicks
  navBtns.forEach(function(btn) {
    btn.addEventListener('click', function() {
      var section = btn.getAttribute('data-section');
      showSection(section);
    });
  });

  // Next/prev button clicks
  nextBtns.forEach(function(btn) {
    btn.addEventListener('click', function() {
      var next = btn.getAttribute('data-next');
      showSection(next);
    });
  });

  // Initialize first section as active
  showSection('filters');
</script>

