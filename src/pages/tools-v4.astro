  <!-- Client-side: Smooth scroll + Sticky nav     -->
  <!-- ═══════════════════════════════════════════ -->

  <script is:inline>
    (function() {
      // ── Smooth scroll for anchor links ──
      var scrollLinks = document.querySelectorAll('.scroll-link');
      scrollLinks.forEach(function(link) {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          var target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });

      // ── Sticky nav: show when scrolled past anchor cards ──
      var stickyNav = document.getElementById('sticky-nav');
      var toolsNav = document.getElementById('tools-nav');
      var sections = document.querySelectorAll('.tool-section');
      var stickyLinks = document.querySelectorAll('.sticky-link');

      // Active link colors
      var activeColors = {
        'section-sandbox': { text: 'text-vibrant-600', bg: 'bg-vibrant-50' },
        'section-media': { text: 'text-teal-600', bg: 'bg-teal-50' },
        'section-assistants': { text: 'text-indigo-600', bg: 'bg-indigo-50' }
      };

      function updateStickyNav() {
        var navBottom = toolsNav.getBoundingClientRect().bottom;
        if (navBottom < 0) {
          stickyNav.style.transform = 'translateY(0)';
        } else {
          stickyNav.style.transform = 'translateY(-100%)';
        }

        // Highlight active section
        var currentSection = '';
        sections.forEach(function(section) {
          var rect = section.getBoundingClientRect();
          if (rect.top <= 120 && rect.bottom > 120) {
            currentSection = section.id;
          }
        });

        stickyLinks.forEach(function(link) {
          var sectionId = link.dataset.section;
          var colors = activeColors[sectionId];
          if (sectionId === currentSection && colors) {
            link.className = 'sticky-link scroll-link px-3 py-1.5 text-sm font-medium rounded-full transition-colors ' + colors.text + ' ' + colors.bg;
          } else {
            link.className = 'sticky-link scroll-link px-3 py-1.5 text-sm font-medium rounded-full transition-colors text-gray-600 hover:text-gray-900 hover:bg-gray-100';
          }
        });
      }

      window.addEventListener('scroll', updateStickyNav, { passive: true });
      updateStickyNav();

      // ── Media Slider ──
      var current = 0;
      var total = 3;
      var slides = [document.getElementById('slide-0'), document.getElementById('slide-1'), document.getElementById('slide-2')];
      var dots = document.querySelectorAll('.slider-dot');
      var toolBtns = document.querySelectorAll('.media-tool-btn');

      function goTo(index) {
        slides[current].style.opacity = '0';
        dots[current].className = 'slider-dot w-2.5 h-2.5 rounded-full bg-gray-300 transition-colors';
        toolBtns[current].className = 'media-tool-btn block bg-white rounded-xl p-5 border-2 border-transparent transition-all hover:shadow-lg hover:border-gray-200 group';

        current = (index + total) % total;

        slides[current].style.opacity = '1';
        dots[current].className = 'slider-dot w-2.5 h-2.5 rounded-full bg-vibrant-600 transition-colors';
        toolBtns[current].className = 'media-tool-btn block bg-white rounded-xl p-5 border-2 border-vibrant-300 transition-all hover:shadow-lg group';
      }

      document.getElementById('slider-prev').addEventListener('click', function() { goTo(current - 1); });
      document.getElementById('slider-next').addEventListener('click', function() { goTo(current + 1); });

      dots.forEach(function(dot) {
        dot.addEventListener('click', function() { goTo(parseInt(this.dataset.slide)); });
      });

      toolBtns.forEach(function(btn) {
        btn.addEventListener('mouseenter', function() { goTo(parseInt(this.dataset.slide)); });
      });
    })();
  </script>

