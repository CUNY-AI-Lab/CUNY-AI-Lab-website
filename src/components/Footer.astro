    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About Section -->
      <div>
        <h3 class="text-lg font-semibold mb-4">The CUNY AI Lab</h3>
        <p class="text-gray-400 text-sm">
          Open academic infrastructure for ethical AI experimentation in research and pedagogy at the City University of New York.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li><a href={`${base}about`} class="text-gray-400 hover:text-white transition-colors">About</a></li>
          <li><a href={`${base}tools`} class="text-gray-400 hover:text-white transition-colors">Tools & Projects</a></li>
          <li><a href={`${base}team`} class="text-gray-400 hover:text-white transition-colors">Team</a></li>
          <li><a href={`${base}contact`} class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Resources</h3>
        <ul class="space-y-2 text-sm">
